{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "strict": true,
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationDir": "dist/types",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "types": []
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "rollup.config.js"]
}
