{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "ESNext",
    "target": "ES5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}
